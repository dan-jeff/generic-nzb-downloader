{
  "name": "generic-nzb-downloader",
  "version": "0.0.7",
  "type": "module",
  "description": "A generic NZB downloader application built with Electron, Vite, React, and TypeScript",
  "main": "electron/main.js",
  "author": {
    "name": "Dan",
    "email": "dan_jeff@hotmail.co.uk"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-jeff/generic-nzb-downloader.git"
  },
  "homepage": "https://github.com/dan-jeff/generic-nzb-downloader",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently --kill-others --raw \"npm run dev\" \"npm run build:electron:watch\" \"npm run dev:electron-only\"",
    "dev:electron-only": "wait-on http://localhost:5174 && sleep 2 && NODE_ENV=development npx electron . --no-sandbox --disable-gpu --disable-dev-shm-usage",
    "build": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:electron:watch": "tsc -p tsconfig.electron.json --watch",
    "dev:android": "npm run build && npx cap sync android && npx cap build android",
    "dev:android:debug": "npm run build && npx cap sync android && export JAVA_HOME=/usr/lib/jvm/java-21-openjdk-amd64 && export PATH=\"$JAVA_HOME/bin:$PATH\" && cd android && ./gradlew assembleDebug",
    "electron:dev": "npm run dev:electron",
    "electron:build": "npm run build && npm run build:electron && electron-builder --publish=never",
    "electron:build:win": "npm run build && npm run build:electron && electron-builder --win --publish=never",
    "electron:build:linux": "npm run build && npm run build:electron && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/filesystem": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@xmldom/xmldom": "^0.8.11",
    "assert": "^2.1.0",
    "axios": "^1.13.2",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "cordova-plugin-chrome-apps-common": "^1.0.7",
    "cordova-plugin-chrome-apps-sockets-tcp": "^1.3.7",
    "cordova-plugin-socket-tcp": "^1.7.1",
    "crypto-browserify": "^3.12.1",
    "electron-dl": "^4.0.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.7.3",
    "events": "^3.3.0",
    "fuse.js": "^7.1.0",
    "https-browserify": "^1.0.0",
    "memfs": "^4.52.0",
    "net-browserify": "^0.2.4",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "timers-browserify": "^2.0.12",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.2.2",
    "vite": "^7.1.7",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "ws": "8.18.0"
  },
  "build": {
    "publish": [
      "github"
    ],
    "appId": "com.dan.generic-nzb-downloader",
    "productName": "Generic NZB Downloader",
    "directories": {
      "output": "dist-electron"
    },
    "icon": "assets/icon.png",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "!electron/**/*.ts"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${name}-v${version}-windows.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${name}-v${version}-linux.${ext}"
    }
  }
}
